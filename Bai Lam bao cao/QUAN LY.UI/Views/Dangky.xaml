<Window x:Class="QUAN_LY.UI.Views.Dangky"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QUAN_LY.UI.Views"
        mc:Ignorable="d"
        Title="Dangky"  Height="700" Width="440" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <!--Chỉnh sửa hiệu ứng chuột của check box -->
        <Style TargetType="CheckBox"  >
            <Setter Property="Cursor" Value="Arrow"></Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Cursor" Value="Hand"></Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!--Chỉnh style button -->
        <Style x:Key="Signup" TargetType="Button">
            <Setter Property="Background" Value="#FF5C605E"></Setter>
            <Setter Property="Foreground" Value="White"></Setter>
            <Setter Property="Cursor" Value="Arrow"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="UseLayoutRounding" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <!--Tạo hiệu ứng bo góc của button và background -->
                        <Border Background="{TemplateBinding Background}"
                                
                                CornerRadius="8"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                               >

                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"></ContentPresenter>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF007139"></Setter>
                    <Setter Property="Foreground" Value="#FFFF00"></Setter>
                    <Setter Property="Cursor" Value="Hand"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!--Chỉnh sửa hiệu ứng chuột cho RadioButton-->
        <Style TargetType="RadioButton">
            <Setter Property="Cursor" Value="Arrow"></Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Cursor" Value="Hand"></Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!--Chỉnh sửa bo góc cho password box -->
        <Style TargetType="PasswordBox" >
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border BorderThickness="1,1,1,1" 
              
              CornerRadius="10"
          BorderBrush="#FF087026"
         
          Background="White">
                            <ScrollViewer x:Name="PART_ContentHost"    
                        Margin="4,2,4,2"
                        HorizontalScrollBarVisibility="Hidden"
                        VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!--Chỉnh sửa bo góc cho text box -->
        <Style TargetType="TextBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border BorderThickness="1,1,1,1" 
                                
                                CornerRadius="10"
                            BorderBrush="#FF087026"
                           
                            Background="White">
                            <ScrollViewer x:Name="PART_ContentHost"    
                                          Margin="4,2,4,2"
                                          HorizontalScrollBarVisibility="Hidden"
                                          VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="#FFD3F8E6"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="#FF6AE4A7">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Image Source="/Anh/Logo.png" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <Label Content="ĐĂNG KÝ TÀI KHOẢN" HorizontalAlignment="Left" VerticalAlignment="Center" RenderTransformOrigin="-0.333,-0.127" FontSize="16" FontWeight="Heavy" Foreground="White" Grid.ColumnSpan="2" Margin="195,0,0,0"/>
        </Grid>
        <Grid Grid.Row="1">
            <Label x:Name="lbl_ten_tai_khoan" Content="Tên tài khoản:" HorizontalAlignment="Left" Margin="90,35,0,0" VerticalAlignment="Top" FontSize="17" FontWeight="Medium"/>
            <Label x:Name="lbl_mat_khau" Content="Mật khẩu:" HorizontalAlignment="Left" Margin="120,80,0,0" VerticalAlignment="Top" FontSize="17" FontWeight="Medium"/>
            <Label x:Name="lbl_nhap_lai_mat_khau" Content="Nhập lại mật khẩu:" HorizontalAlignment="Left" Margin="52,125,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.246,0.4" FontSize="17" FontWeight="Medium"/>
            <Label x:Name="lbl_ho_ten" Content="Họ tên:" HorizontalAlignment="Left" Margin="141,170,0,0" VerticalAlignment="Top" FontSize="17" FontWeight="Medium"/>
            <Label x:Name="lbl_date" Content="Ngày sinh (dd/mm/yyyy):" HorizontalAlignment="Left" Margin="1,215,0,0" VerticalAlignment="Top" FontSize="17" FontWeight="Medium"/>
            <Label x:Name="lbl_diachi" Content="Địa chỉ:" HorizontalAlignment="Left" Margin="141,260,0,0" VerticalAlignment="Top" FontSize="17" FontWeight="Medium"/>
            <Label x:Name="lbl_email" Content="Email:" HorizontalAlignment="Left" Margin="152,305,0,0" VerticalAlignment="Top" FontSize="17" FontWeight="Medium"/>
            <Label x:Name="lbl_sdt" Content="Số điện thoại:" HorizontalAlignment="Left" Margin="91,350,0,0" VerticalAlignment="Top" FontSize="17" FontWeight="Medium"/>
            <Label x:Name="lbl_gioitinh" Content="Giới tính:" HorizontalAlignment="Left" Margin="127,395,0,0" VerticalAlignment="Top" FontSize="17" FontWeight="Medium"/>
            <TextBox HorizontalAlignment="Left" Margin="219,39,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="185"  BorderBrush="#FF08EBDD" BorderThickness="2,2,2,2" Height="24" />
            <PasswordBox x:Name="pwdbox"  HorizontalAlignment="Left" Margin="219,84,0,0" VerticalAlignment="Top" Width="185" Height="24" BorderBrush="Black" BorderThickness="1,1,1,1"/>
            <TextBox x:Name="txtpassword" HorizontalAlignment="Left" Margin="219,84,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="185" Height="24" BorderBrush="Black"/>
            <PasswordBox x:Name="pwdbox1"  HorizontalAlignment="Left" Margin="219,129,0,0" VerticalAlignment="Top" Width="185" Height="24" BorderBrush="Black" BorderThickness="1,1,1,1"/>
            <TextBox x:Name="txtpassword1" HorizontalAlignment="Left" Margin="219,129,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="185"  Height="24" BorderBrush="Black"/>
            <CheckBox Content="Hiện mật khẩu" HorizontalAlignment="Left" Margin="304,157,0,0" VerticalAlignment="Top" FontSize="12" FontWeight="Medium" Checked="CheckBox_Checked" Unchecked="CheckBox_UnChecked"/>
            <TextBox HorizontalAlignment="Left" Margin="219,174,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="185" Height="24" BorderBrush="Black"/>
            <TextBox HorizontalAlignment="Left" Margin="219,264,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="185" Height="24" BorderBrush="Black"/>
            <TextBox HorizontalAlignment="Left" Margin="219,309,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="185" Height="24" BorderBrush="Black"/>
            <TextBox HorizontalAlignment="Left" Margin="219,354,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="185" Height="24" BorderBrush="Black" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            <DatePicker HorizontalAlignment="Left" Margin="219,221,0,0" VerticalAlignment="Top" Height="24" Width="186" BorderBrush="Black" />
            <RadioButton Content="Nam" HorizontalAlignment="Left" Margin="219,404,0,0" VerticalAlignment="Top" Height="19" Width="50" FontSize="14"/>
            <RadioButton Content="Nữ" HorizontalAlignment="Left" Margin="290,404,0,0" VerticalAlignment="Top" Height="19" Width="50" FontSize="14"/>
            <Button Style="{StaticResource Signup}" x:Name="btbdangki" Height="30" Width="160" VerticalContentAlignment="Center" VerticalAlignment="Bottom" Margin="140,0,0,105" Content="ĐĂNG KÝ " FontSize="16" ForceCursor="True" FontWeight="Heavy" Background="#FF0D9F56" BorderThickness="0,0,0,0" Padding="0,0,0,0" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Click="btbdangki_Click"/>
            <TextBlock HorizontalAlignment="Left" Margin="8,0,0,50" TextWrapping="Wrap" Text="Bạn đã có tài khoản? Đăng nhập ngay:" VerticalAlignment="Bottom" FontSize="15" FontWeight="Medium"/>
            <Button Style="{StaticResource Signup}" x:Name="btbdangnhap" Width="120" Height="26" VerticalContentAlignment="Center" Margin="295,0,0,47" Content="ĐĂNG NHẬP" FontSize="16" ForceCursor="True" FontWeight="Heavy" Background="#FF0D9F56" BorderThickness="0,0,0,0" HorizontalAlignment="Left" Padding="0,0,0,0" VerticalAlignment="Bottom" Click="btbdangnhap_Click"/>


        </Grid>


    </Grid>
</Window>
