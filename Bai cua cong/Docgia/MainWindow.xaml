<Window x:Class="Docgia.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Docgia"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="800">
    <Window.Resources>
        <!-- Giữ nguyên style bạn đã định nghĩa -->
        <Style TargetType="CheckBox">
            <Setter Property="Cursor" Value="Arrow"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Cursor" Value="Hand"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="Signup" TargetType="Button">
            <Setter Property="Background" Value="#FF5C605E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Arrow"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="UseLayoutRounding" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF007139"/>
                    <Setter Property="Foreground" Value="#FFFF00"/>
                    <Setter Property="Cursor" Value="Hand"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border BorderThickness="1"
                                CornerRadius="10"
                                BorderBrush="#FF087026"
                                Background="White">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Margin="4,2,4,2"
                                          HorizontalScrollBarVisibility="Hidden"
                                          VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="0,0,0,-65">
        <!-- Nền -->
        <Grid.Background>
            <SolidColorBrush Color="#FFD3F8E6"/>
        </Grid.Background>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.24*"/>
            <ColumnDefinition Width="0.76*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Grid Grid.Row="0" Background="#FF6AE4A7" >
            <!-- Logo -->
            <Image Margin="0,0,0,400" Source="/Images/Logo.jpg" Stretch="Fill"/>

            <!-- Menu chức năng -->
            <StackPanel VerticalAlignment="Center">
                <Button Style="{StaticResource Signup}" x:Name="btnTraCuuSach"
                        Content="📚 Tra cứu sách" Margin="10,10,10,0"
                        Height="37" FontSize="16" FontWeight="Bold"
                        BorderBrush="#FF0D9F56" Background="#FF0D9F56"
                        Click="btnTraCuuSach_Click"/>

                <Button Style="{StaticResource Signup}" x:Name="btnGioMuon"
                        Content="🛒 Giỏ mượn" Margin="10,10,10,0"
                        Height="37" FontSize="16" FontWeight="Bold"
                        BorderBrush="#FF0D9F56" Background="#FF0D9F56"
                        Click="btnGioMuon_Click"/>

                <Button Style="{StaticResource Signup}" x:Name="btnLichSuMuon"
                        Content="🕓 Lịch sử mượn" Margin="10,10,10,0"
                        Height="37" FontSize="16" FontWeight="Bold"
                        BorderBrush="#FF0D9F56" Background="#FF0D9F56"
                        Click="btnLichSuMuon_Click"/>

                <Button Style="{StaticResource Signup}" x:Name="btnTaiKhoan"
                        Content="👤 Tài khoản cá nhân" Margin="10,10,10,0"
                        Height="37" FontSize="16" FontWeight="Bold"
                        BorderBrush="#FF0D9F56" Background="#FF0D9F56"
                        Click="btnTaiKhoan_Click"/>

                <Button Style="{StaticResource Signup}" x:Name="btnExit"
                        Content="🚪 Đăng xuất" Margin="10,20,10,0"
                        Height="37" FontSize="16" FontWeight="Bold"
                        BorderBrush="#FF0D9F56" Background="#FF0D9F56"
                        Click="btnExit_Click"/>
            </StackPanel>

        </Grid>

        <!-- Nội dung chính -->
        <StackPanel Grid.Column="1" Margin="20,60,20,30">
            <!-- Khu vực hiển thị dữ liệu -->
            <StackPanel x:Name="stkPanel" Height="509"
                        />


            <!-- Khu vực hiển thị dữ liệu -->
        </StackPanel>
    </Grid>

</Window>
