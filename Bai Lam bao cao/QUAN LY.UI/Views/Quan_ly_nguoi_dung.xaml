<UserControl x:Class="QUAN_LY.UI.Views.Quan_ly_nguoi_dung"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QUAN_LY.UI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Background="White" Padding="10" CornerRadius="5"
            HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Thông tin độc giả -->
                <RowDefinition Height="Auto"/>
                <!-- Nút chức năng -->
                <RowDefinition Height="*"/>
                <!-- Danh sách -->
            </Grid.RowDefinitions>

            <!-- ===== Thông tin độc giả ===== -->
            <GroupBox Grid.Row="0" Margin="0,0,0,10" BorderBrush="#DDDDDD" BorderThickness="1" Background="White">
                <GroupBox.Header>
                    <TextBlock Text="Thông Tin Độc Giả"
                               HorizontalAlignment="Center"
                               FontWeight="Bold"
                               FontSize="16"
                               Foreground="#00BCD5"/>
                </GroupBox.Header>

                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="150"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Dòng 1 -->
                    <TextBlock Text="Mã Độc Giả:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtMaDG" Grid.Row="0" Grid.Column="1" Margin="5"/>

                    <TextBlock Text="Họ Tên:" Grid.Row="0" Grid.Column="3" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtHoTen" Grid.Row="0" Grid.Column="4" Margin="5"/>

                    <!-- Dòng 2 -->
                    <TextBlock Text="Giới Tính:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
                    <ComboBox x:Name="cbGioiTinh" Grid.Row="1" Grid.Column="1" Margin="5">
                        <ComboBoxItem Content="Nam"/>
                        <ComboBoxItem Content="Nữ"/>
                    </ComboBox>

                    <TextBlock Text="Ngày Sinh:" Grid.Row="1" Grid.Column="3" VerticalAlignment="Center"/>
                    <DatePicker x:Name="dpNgaySinh" Grid.Row="1" Grid.Column="4" Margin="5"/>

                    <!-- Dòng 3 -->
                    <TextBlock Text="Địa Chỉ:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtDiaChi" Grid.Row="2" Grid.Column="1" Margin="5"/>

                    <TextBlock Text="SĐT:" Grid.Row="2" Grid.Column="3" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtSDT" Grid.Row="2" Grid.Column="4" Margin="5"/>

                    <!-- Dòng 4 -->
                    <TextBlock Text="Email:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtEmail" Grid.Row="3" Grid.Column="1" Margin="5"/>

                    <TextBlock Text="Ngày Đăng Ký:" Grid.Row="3" Grid.Column="3" VerticalAlignment="Center"/>
                    <DatePicker x:Name="dpNgayDK" Grid.Row="3" Grid.Column="4" Margin="5"/>
                </Grid>
            </GroupBox>

            <!-- ===== Nút chức năng + Tìm kiếm ===== -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                <Grid Width="240" Height="32" Margin="5,0,15,0">
                    <TextBox x:Name="txtTimKiem"
                         VerticalContentAlignment="Center"
                         Padding="6,0,0,0"
                         BorderBrush="#1C82AD"
                         BorderThickness="1"
                         TextChanged="txtTimKiem_TextChanged" HorizontalAlignment="Right" Width="240"
                         />
                    <TextBlock x:Name="txtPlaceholder"
                       Text="🔍 Nhập tên độc giả để tìm..."
                       Foreground="Gray"
                       VerticalAlignment="Center"
                       IsHitTestVisible="False"
                       Visibility="Visible"
                       HorizontalAlignment="Center"/>
                </Grid>

                <Button x:Name="XoaDG" Content="Xóa" Width="80" Margin="5" Background="#FF3E3E" Foreground="White" FontWeight="SemiBold" BorderThickness="0" Cursor="Hand"/>
                <Button x:Name="CapNhatDG" Content="Cập nhật" Width="100" Margin="5" Background="#FFC107" Foreground="White" FontWeight="SemiBold" BorderThickness="0" Cursor="Hand"/>
                <Button x:Name="InDG" Content="Reset" Width="80" Margin="5" Background="#007ACC" Foreground="White" FontWeight="SemiBold" BorderThickness="0" Cursor="Hand"/>
            </StackPanel>

            <!-- ===== Danh sách độc giả ===== -->
            <DataGrid x:Name="dgDocGia" Grid.Row="2" AutoGenerateColumns="False" IsReadOnly="True" Margin="0,5,0,0"
                      HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                      AlternatingRowBackground="#F9F9F9"
                      GridLinesVisibility="Horizontal"
                      BorderBrush="#B2EBF2"
                      SelectionChanged="dgDocGia_SelectionChanged"
                      BorderThickness="1"
                      Background="White"
                      ScrollViewer.CanContentScroll="True"
                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                      ScrollViewer.HorizontalScrollBarVisibility="Auto"
                      FontFamily="Segoe UI"
                      FontSize="14"
                      RowHeight="30"
                      HorizontalGridLinesBrush="#E0F2F1"
                      VerticalGridLinesBrush="#E0F2F1">

                <DataGrid.Resources>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#B2EBF2"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="Foreground" Value="#006064"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                        <Setter Property="Padding" Value="8,6"/>
                        <Setter Property="BorderBrush" Value="#80DEEA"/>
                        <Setter Property="BorderThickness" Value="0,0,1,1"/>
                    </Style>

                    <Style TargetType="DataGridCell">
                        <Setter Property="Padding" Value="6,4"/>
                        <Setter Property="BorderBrush" Value="#E0F2F1"/>
                        <Setter Property="BorderThickness" Value="0,0,1,1"/>
                    </Style>
                </DataGrid.Resources>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Mã ĐG" Binding="{Binding MaKhachHang}"/>
                    <DataGridTemplateColumn Header="Họ Tên">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock>
                                    <TextBlock.Inlines>
                                        <Run Text="{Binding HoTen}" />
                                    </TextBlock.Inlines>
                                </TextBlock>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="Giới Tính" Binding="{Binding GioiTinh}"/>
                    <DataGridTextColumn Header="Ngày Sinh" Binding="{Binding NgaySinh}"/>
                    <DataGridTextColumn Header="Địa Chỉ" Binding="{Binding DiaChi}"/>
                    <DataGridTextColumn Header="SĐT" Binding="{Binding SoDienThoai}"/>
                    <DataGridTextColumn Header="Email" Binding="{Binding Email}"/>
                    <DataGridTextColumn Header="Ngày ĐK" Binding="{Binding NgayDK}"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Border>
</UserControl>
