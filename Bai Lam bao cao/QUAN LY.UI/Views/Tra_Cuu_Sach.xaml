<UserControl x:Class="QUAN_LY.UI.Views.Tra_Cuu_Sach"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QUAN_LY.UI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="530" d:DesignWidth="700">
    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto" MinHeight="241"/>
        </Grid.RowDefinitions>

        <!-- Thanh tìm kiếm -->
        <Grid Margin="0,10,0,10">
            <TextBox x:Name="txtTimKiem" 
             Height="35" 
             FontSize="14"
             Padding="10,0,10,0"
             />

            <TextBlock x:Name="txtPlaceholder" Text="🔍 Nhập tên sách cần tìm..."
               FontStyle="Italic"
               Foreground="Gray"
               Margin="10,10,10,0"
               IsHitTestVisible="False"
              ></TextBlock>
        </Grid>

        <!-- Bảng danh sách sách -->
        <DataGrid x:Name="dgSach" Grid.Row="1"
                  CanUserAddRows="False"
                  HeadersVisibility="Column"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                 
                 Margin="0,0,0,241" Grid.RowSpan="2" SelectionChanged="dgSach_SelectionChanged">
            <DataGrid.Resources>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#B2EBF2"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="Foreground" Value="#006064"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                    <Setter Property="Padding" Value="8,6"/>
                    <Setter Property="BorderBrush" Value="#80DEEA"/>
                    <Setter Property="BorderThickness" Value="0,0,1,1"/>
                </Style>

                <Style TargetType="DataGridCell">
                    <Setter Property="Padding" Value="6,4"/>
                    <Setter Property="BorderBrush" Value="#E0F2F1"/>
                    <Setter Property="BorderThickness" Value="0,0,1,1"/>
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Tên sách" Binding="{Binding TieuDe}"/>
                <DataGridTextColumn Header="Tác giả" Binding="{Binding TacGia}"/>
                <DataGridTextColumn Header="Thể loại" Binding="{Binding TheLoai}"/>
                <DataGridTextColumn Header="NXB" Binding="{Binding NhaXuatBan}"/>
                <DataGridTextColumn Header="Số lượng tồn" Binding="{Binding SoLuongTon}"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Khu vực chi tiết sách -->
        <Border Grid.Row="2" Margin="0,40,0,0" Padding="15"
        BorderBrush="#1C82AD" BorderThickness="1" CornerRadius="8"
        Background="White">
            <StackPanel>
                <TextBlock Text="📖 Thông tin chi tiết sách" 
                   FontWeight="Bold" 
                   
                   FontSize="18" 
                   Margin="0,0,0,10" Foreground="#FF42B1C5"/>

                <!-- Form thông tin sách -->
                <Grid Margin="10,0,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Tên sách:" Grid.Row="0" Grid.Column="0"/>
                    <TextBlock x:Name="txtTensach"  Grid.Row="0" Grid.Column="1"/>

                    <TextBlock Text="NXB:" Grid.Row="0" Grid.Column="2" />
                    <TextBlock x:Name="txtNhaxb"  Grid.Row="0" Grid.Column="3"/>

                    <TextBlock Text="Thể loại:" Grid.Row="1" Grid.Column="0" />
                    <TextBlock x:Name="txtTheloai"  Grid.Row="1" Grid.Column="1"/>

                    <TextBlock Text="Tác giả:" Grid.Row="1" Grid.Column="2" />
                    <TextBlock x:Name="txtTacgia"  Grid.Row="1" Grid.Column="3"/>

                    <TextBlock Text="Số lượng tồn:" Grid.Row="2" Grid.Column="0" />
                    <TextBlock x:Name="txtSoluongton"  Grid.Row="2" Grid.Column="1"/>

                    <TextBlock Text="Mô tả:" Grid.Row="2" Grid.Column="2" />
                    <ScrollViewer Grid.Row="2" Grid.Column="3"
                                  VerticalScrollBarVisibility="Auto"
                                  MaxHeight="80">
                        <TextBlock x:Name="txtMota"
                                   TextWrapping="Wrap"
                                   TextTrimming="None"
                                   Margin="0,2,0,0"/>
                    </ScrollViewer>


                </Grid>

                <!-- Nút thêm giỏ -->
                <Button x:Name="btnThemGio" 
                Content="🛒 Thêm vào giỏ mượn"
                Width="150" Height="30" 
                Margin="200,30,0,0"
                HorizontalAlignment="Left"
                Background="#FF2DD4D4" 
                Foreground="White" 
                FontWeight="Bold"
                Cursor="Hand" Click="btnThemGio_Click" 
               />
            </StackPanel>
        </Border>

    </Grid>
</UserControl>
