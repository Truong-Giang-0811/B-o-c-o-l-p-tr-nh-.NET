<UserControl x:Class="QUAN_LY.UI.Views.Quan_Ly_Nhan_Vien"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QUAN_LY.UI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Background="#E6FAF0" Padding="12" CornerRadius="6">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Thông tin nhân viên -->
                <RowDefinition Height="Auto"/>
                <!-- Nút chức năng -->
                <RowDefinition Height="*"/>
                <!-- Danh sách -->
            </Grid.RowDefinitions>

            <GroupBox Header="Thông Tin Nhân Viên"
                      FontWeight="Bold"
                      FontSize="14"
                      Margin="0,0,0,10">
                <Grid Margin="8,6">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="160"/>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="160"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- CỘT TRÁI -->
                    <TextBlock Text="Tên NV:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtTenNV" Grid.Row="0" Grid.Column="1" Margin="5"/>

                    <TextBlock Text="Tên đăng nhập:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtTenDangNhap" Grid.Row="1" Grid.Column="1" Margin="5"/>
                    <TextBlock Text="Mật khẩu:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"/>
                    <PasswordBox x:Name="txtMatKhau" Grid.Row="2" Grid.Column="1" Margin="5"/>

                    

                    <TextBlock Text="Nhập lại MK:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center"/>
                    <PasswordBox x:Name="txtNhapLaiMK" Grid.Row="3" Grid.Column="1" Margin="5"/>

                    <!-- CỘT PHẢI -->
                    <TextBlock Text="Địa chỉ:" Grid.Row="0" Grid.Column="3" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtDiaChi" Grid.Row="0" Grid.Column="4" Margin="5"/>

                    <TextBlock Text="Ngày sinh:" Grid.Row="1" Grid.Column="3" VerticalAlignment="Center"/>
                    <DatePicker x:Name="dpNgaySinh" Grid.Row="1" Grid.Column="4" Margin="5"/>

                    <TextBlock Text="Giới tính:" Grid.Row="2" Grid.Column="3" VerticalAlignment="Center"/>
                    <StackPanel Grid.Row="2" Grid.Column="4" Orientation="Horizontal" Margin="5,0,0,0">
                        <RadioButton x:Name="rdNam" Content="Nam" Margin="0,0,15,0" Height="20"/>
                        <RadioButton x:Name="rdNu" Content="Nữ" Height="20"/>
                    </StackPanel>

                    <TextBlock Text="Điện thoại:" Grid.Row="3" Grid.Column="3" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtDienThoai" Grid.Row="3" Grid.Column="4" Margin="5"/>

                    <TextBlock Text="Email:" Grid.Row="4" Grid.Column="3" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtEmail" Grid.Row="4" Grid.Column="4" Margin="5"/>
                </Grid>
            </GroupBox>

            <!-- FORM ĐỔI MẬT KHẨU -->
            <Grid x:Name="DoiMK"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  Visibility="Collapsed">

                <Rectangle Fill="#66000000"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch"/>

                <Border Width="300" Height="180"
                        Background="#F0FFF5"
                        CornerRadius="8"
                        BorderBrush="#88C9A1"
                        BorderThickness="3"
                        Padding="12"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        SnapsToDevicePixels="True"
                        >
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Tiêu đề -->
                        <TextBlock Text="ĐỔI MẬT KHẨU"
                       Grid.Row="0" Grid.ColumnSpan="2"
                       FontSize="16"
                       FontWeight="Bold"
                       Foreground="#2E7D32"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,8"/>

                        <!-- Nhập mật khẩu -->
                        <TextBlock Text="Mật khẩu cũ:" FontWeight="Bold" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="4"/>
                        <PasswordBox x:Name="txtMKCu" Grid.Row="1" Grid.Column="1" Margin="4"/>

                        <TextBlock Text="Mật khẩu mới:" FontWeight="Bold" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="4"/>
                        <PasswordBox x:Name="txtMKMoi" Grid.Row="2" Grid.Column="1" Margin="4"/>

                        <TextBlock Text="Nhập lại MK:" FontWeight="Bold" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="4"/>
                        <PasswordBox x:Name="txtNhapLaiMKMoi" Grid.Row="3" Grid.Column="1" Margin="4"/>

                        <!-- Nút bấm -->
                        
                    </Grid>
                </Border>
            </Grid>


            <!-- ==== NÚT CHỨC NĂNG & TÌM KIẾM ==== -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                <!-- Ô tìm kiếm -->
                <Grid Width="200" Height="30" Margin="5,0,15,0">
                    <TextBox x:Name="txtTimKiem"
                             
                             VerticalContentAlignment="Center"
                             Padding="6,0,0,0"/>
                    <TextBlock x:Name="txtPlaceholder"
                               Text="🔍 Tìm theo tên hoặc mã nhân viên..."
                               Foreground="Gray"
                               VerticalAlignment="Center"
                               IsHitTestVisible="False"
                               Visibility="Visible" HorizontalAlignment="Center" Width="200"/>
                </Grid>

                <!-- Nút thao tác -->
                <Button Content="Thêm" Width="70" Height="28" Margin="5" />
                <Button Content="Xóa" Width="70" Height="28" Margin="5" />
                <Button Content="Cập nhật" Width="70" Height="28" Margin="5" />
                <Button Content="Reset" Width="70" Height="28" Margin="5" />
            </StackPanel>

            <!-- ==== DANH SÁCH NHÂN VIÊN ==== -->
            <DataGrid x:Name="dgNhanVien"
                      Grid.Row="2"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      AlternatingRowBackground="#F5FFF9"
                      GridLinesVisibility="Horizontal"
                      CanUserAddRows="False"
                      RowHeight="28"
                      Margin="0,5,0,0"
                      FontSize="13">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Mã NV" Binding="{Binding MaNV}" Width="*"/>
                    <DataGridTextColumn Header="Tên nhân viên" Binding="{Binding TenNV}" Width="*"/>
                    <DataGridTextColumn Header="Địa chỉ" Binding="{Binding DiaChi}" Width="*"/>
                    <DataGridTextColumn Header="Giới tính" Binding="{Binding GioiTinh}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Border>
</UserControl>
