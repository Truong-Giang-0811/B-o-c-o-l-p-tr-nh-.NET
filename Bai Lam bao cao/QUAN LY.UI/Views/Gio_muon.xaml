<UserControl x:Class="QUAN_LY.UI.Views.Gio_muon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QUAN_LY.UI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="530" d:DesignWidth="700">
    <Grid Background="White">
        <TextBlock Text="🛒 Danh sách sách trong giỏ mượn" 
                   Foreground="#00BCD5"
                   FontSize="20" FontWeight="Bold"
                   Margin="10,10,0,20"/>

        <DataGrid x:Name="dgGioMuon" 
                  AutoGenerateColumns="False" IsReadOnly="True" Margin="0,5,0,0"
                      HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                      AlternatingRowBackground="#F9F9F9"
                      GridLinesVisibility="Horizontal"
                      BorderBrush="#B2EBF2"
                      BorderThickness="1"
                      Background="White"
                      ScrollViewer.CanContentScroll="True"
                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                      ScrollViewer.HorizontalScrollBarVisibility="Auto"
                      FontFamily="Segoe UI"
                      FontSize="14"
                      RowHeight="30"
                      HorizontalGridLinesBrush="#E0F2F1"
                      VerticalGridLinesBrush="#E0F2F1"
                  SelectionChanged="dgGioMuon_SelectionChanged"
                  PreviewTextInput="dgGioMuon_PreviewTextInput"
                  CellEditEnding="dgGioMuon_CellEditEnding">
            <DataGrid.Resources>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#B2EBF2"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="Foreground" Value="#006064"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                    <Setter Property="Padding" Value="8,6"/>
                    <Setter Property="BorderBrush" Value="#80DEEA"/>
                    <Setter Property="BorderThickness" Value="0,0,1,1"/>
                </Style>

                <Style TargetType="DataGridCell">
                    <Setter Property="Padding" Value="6,4"/>
                    <Setter Property="BorderBrush" Value="#E0F2F1"/>
                    <Setter Property="BorderThickness" Value="0,0,1,1"/>
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="Chọn" Binding="{Binding IsChecked, Mode=TwoWay}" Width="60"/>
                <DataGridTextColumn IsReadOnly="True" Header="Tên sách" Binding="{Binding TieuDe}" Width="*"/>
                <DataGridTextColumn IsReadOnly="True" Header="Tác giả" Binding="{Binding TacGia}" Width="*"/>
                <DataGridTextColumn IsReadOnly="True" Header="Thể loại" Binding="{Binding TheLoai}" Width="*"/>
                <DataGridTextColumn IsReadOnly="True" Header="NXB" Binding="{Binding NhaXuatBan}" Width="*"/>

                <DataGridTextColumn IsReadOnly="False" Header="SL mượn" Binding="{Binding SoLuongmuon}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <Button Content="❌ Xóa khỏi giỏ"
                Width="150" Height="35"
                Background="#FF5C5C"
                Foreground="White" FontWeight="Bold"
                HorizontalAlignment="Left" Margin="10,0,0,10"
                VerticalAlignment="Bottom" Click="XoaGiohang_Click"
               />

        <Button Content="✅ Xác nhận mượn"
                Width="150" Height="35"
                Background="#00BCD5"
                Foreground="White" FontWeight="Bold"
                HorizontalAlignment="Right" Margin="0,0,10,10"
                VerticalAlignment="Bottom" Click="Xacnhan_Click"
               />
    </Grid>
</UserControl>
