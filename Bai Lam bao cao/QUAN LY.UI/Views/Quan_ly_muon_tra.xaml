<UserControl x:Class="QUAN_LY.UI.Views.Quan_ly_muon_tra"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QUAN_LY.UI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="530" d:DesignWidth="700">
    <Border Background="#FF7DBD7D" Padding="10" CornerRadius="5">
        <Grid>
            <TabControl>
                <!-- TAB 1: Quản lý mượn sách -->
                <TabItem Header="Quản Lý Mượn Sách">
                    <Grid Background="#FF7DBD7D" Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <!-- Thông tin -->
                            <RowDefinition Height="Auto"/>
                            <!-- Nút -->
                            <RowDefinition Height="*"/>
                            <!-- DataGrid -->
                        </Grid.RowDefinitions>

                        <!-- Khối Thông tin -->
                        <Grid Grid.Row="0" Margin="5,0,0,-10" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="45"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Thông tin sách -->
                            <GroupBox Header="Thông Tin Sách" Width="250" Margin="30,10,0,14" Padding="10" Grid.Column="0">
                                <Grid Height="140">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Grid.ColumnDefinitions>

                                        <ColumnDefinition Width="90"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="Chọn Mã Sách:" Grid.Row="0" Grid.Column="0" Margin="3,0,3,3" Grid.ColumnSpan="2" VerticalAlignment="Top"/>
                                    <ComboBox Grid.Row="0" Grid.Column="2" Margin="0,3,0,3" HorizontalAlignment="Center" Width="107" Padding="6,0,5,3"/>

                                    <TextBlock Text="Tên Sách:" Grid.Row="1" Grid.Column="0" Margin="3,3,3,3" Grid.ColumnSpan="2"/>
                                    <TextBox Grid.Row="1" Grid.Column="2" Margin="3,3,3,3"/>

                                    <TextBlock Text="Thể Loại:" Grid.Row="2" Grid.Column="0" Margin="3,3,3,3" Grid.ColumnSpan="2"/>
                                    <TextBox Grid.Row="2" Grid.Column="2" Margin="3,3,3,3"/>

                                    <TextBlock Text="Ngày Hẹn Trả:" Grid.Row="3" Grid.Column="0" Margin="3,3,3,3" Grid.ColumnSpan="2"/>
                                    <DatePicker Grid.Row="3" Grid.Column="2" Margin="3,3,3,3"/>

                                    
                                </Grid>
                            </GroupBox>

                            <!-- Thực hiện cho mượn -->
                            <GroupBox Header="Thông Tin Độc Giả" Width="250" Margin="50,10,0,8" Padding="10,10,10,10" Grid.Column="2" HorizontalAlignment="Right">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="Mã Độc Giả:" Grid.Row="0" Grid.Column="0" Margin="3"/>
                                    <TextBox Grid.Row="0" Grid.Column="1" Margin="3"/>

                                    <TextBlock Text="Tên Độc Giả:" Grid.Row="1" Grid.Column="0" Margin="3"/>
                                    <TextBox Grid.Row="1" Grid.Column="1" Margin="3"/>

                                    <TextBlock Text="Số Lượng Mượn:" Grid.Row="2" Grid.Column="0" Margin="3"/>
                                    <TextBox Grid.Row="2" Grid.Column="1" Margin="3"/>


                                </Grid>
                            </GroupBox>

                        </Grid>

                        <!-- Nút -->
                        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,10">
                            <Button x:Name="btnMuonMoi" Content="Mượn Mới" Width="100" Height="30"/>
                            <Button x:Name="btnChoMuon" Content="Cho Mượn" Width="100" Height="30" Margin="10,0"/>
                            <Button x:Name="btnKetThuc" Content="Kết Thúc" Width="100" Height="30" Margin="10,0"/>
                        </StackPanel>

                        <!-- DataGrid -->
                        <GroupBox Header="Danh Sách Đơn Mượn" Grid.Row="2" Margin="5">
                            <DataGrid AutoGenerateColumns="False" Margin="5">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Mã Mượn" Binding="{Binding MaMuon}"/>
                                    <DataGridTextColumn Header="Tên Độc Giả" Binding="{Binding TenDocGia}"/>
                                    <DataGridTextColumn Header="Tên Sách" Binding="{Binding TenSach}"/>
                                    <DataGridTextColumn Header="Số Lượng" Binding="{Binding SoLuong}"/>
                                    <DataGridTextColumn Header="Ngày Mượn" Binding="{Binding NgayMuon}"/>
                                    <DataGridTextColumn Header="Trạng Thái" Binding="{Binding TrangThai}"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </GroupBox>
                    </Grid>
                </TabItem>

                <!-- TAB 2: Quản lý trả sách -->
                <TabItem Header="Quản Lý Trả Sách">
                    <Grid Background="#FF7DBD7D" Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="47*"/>
                            <ColumnDefinition Width="469*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <!-- Thực hiện trả sách -->
                            <RowDefinition Height="Auto"/>
                            <!-- Nút thao tác -->
                            <RowDefinition Height="*"/>
                            <!-- Danh sách -->
                        </Grid.RowDefinitions>

                        <!-- Thực hiện trả sách -->
                        <GroupBox Header="Thực Hiện Trả Sách" Grid.Row="0" Margin="5,5,5,5" Grid.ColumnSpan="2">
                            <StackPanel Margin="5">
                                <StackPanel Orientation="Horizontal" Margin="2">
                                    <TextBlock Text="Mã Độc Giả:" Width="100" VerticalAlignment="Center"/>
                                    <ComboBox Width="150"/>
                                    <TextBlock Text="Ngày Mượn:" Width="80" VerticalAlignment="Center" Margin="10,0,0,0"/>
                                    <DatePicker Width="140"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="2">
                                    <TextBlock Text="Mã Sách:" Width="100" VerticalAlignment="Center"/>
                                    <TextBox Width="150"/>
                                    <TextBlock Text="Ngày Hẹn Trả:" Width="80" VerticalAlignment="Center" Margin="10,0,0,0"/>
                                    <DatePicker Width="140"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="2">
                                    <TextBlock Text="Số Lượng Mượn:" Width="100" VerticalAlignment="Center"/>
                                    <TextBox Width="150"/>
                                    <TextBlock Text="Ngày Trả:" Width="80" VerticalAlignment="Center" Margin="10,0,0,0"/>
                                    <DatePicker Width="140"/>
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>

                        <!-- Nút thao tác -->
                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="46,5,0,5" HorizontalAlignment="Left" Grid.Column="1">
                            <Button Content="Trả Sách" Width="100" Margin="5"/>
                            <Button Content="Lưu" Width="100" Margin="5"/>
                            <Button Content="Thoát" Width="100" Margin="5"/>
                        </StackPanel>

                        <!-- Danh sách trả sách -->
                        <GroupBox Header="Danh Sách Trả Sách" Grid.Row="2" Margin="5,5,5,5" Grid.ColumnSpan="2">
                            <DataGrid AutoGenerateColumns="False" IsReadOnly="True" Margin="5">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Mã Độc Giả"/>
                                    <DataGridTextColumn Header="Mã Sách"/>
                                    <DataGridTextColumn Header="Số Lượng"/>
                                    <DataGridTextColumn Header="Ngày Mượn"/>
                                    <DataGridTextColumn Header="Ngày Hẹn Trả"/>
                                    <DataGridTextColumn Header="Ngày Trả"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </GroupBox>
                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>
    </Border>
</UserControl>
