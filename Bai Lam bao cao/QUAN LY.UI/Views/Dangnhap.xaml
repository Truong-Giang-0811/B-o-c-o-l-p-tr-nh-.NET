<Window x:Class="QUAN_LY.UI.Views.Dangnhap"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QUAN_LY.UI.Views"
        mc:Ignorable="d"
        Title="Dangnhap" Height="320" Width="420" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="PasswordBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border BorderThickness="1"
                        CornerRadius="10"
                        BorderBrush="#00BCD5"
                        Background="White">
                            <ScrollViewer x:Name="PART_ContentHost"
                                  Margin="4,2,4,2"
                                  HorizontalScrollBarVisibility="Hidden"
                                  VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <Style TargetType="TextBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border BorderThickness="1"
                        CornerRadius="10"
                        BorderBrush="#00BCD5"
                        Background="White">
                            <ScrollViewer x:Name="PART_ContentHost"
                                  Margin="4,2,4,2"
                                  HorizontalScrollBarVisibility="Hidden"
                                  VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="CheckBox"  >
            <Setter Property="Cursor" Value="Arrow"></Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Cursor" Value="Hand"></Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="Signup" TargetType="Button">
            <Setter Property="Background" Value="#FF39F1F1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Arrow"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="34"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                        CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <!-- Hover: chỉ đổi đậm hơn -->
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#0097A7"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="Cursor" Value="Hand"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0,0" StartPoint="0,1">
                <GradientStop Color="#FFE1F2F7" Offset="0"/>
                <GradientStop Color="#FF97F3F3" Offset="0.5"/>
                <GradientStop Color="#FFF0F4F6" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.4*"></ColumnDefinition>
            <ColumnDefinition Width="0.6*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#00BCD5" Offset="0"/>
                    <GradientStop Color="#26C6DA" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>
            <StackPanel Margin="10,40"
                VerticalAlignment="Top"
                Orientation="Vertical"
                HorizontalAlignment="Center">

                <!-- Icon ở hàng trên -->
                <TextBlock Text="📖"
                   FontSize="35"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Foreground="White"/>

                <!-- Chữ ở hàng dưới -->
                <TextBlock Text="THƯ VIỆN GCLB"
                   FontSize="19"
                   FontWeight="Bold"
                   Foreground="White"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Margin="0,10,0,0"/>
            </StackPanel>
            <Label Content="Bạn chưa có tài khoản?
                    " HorizontalAlignment="Center" FontFamily="Georgia" Margin="0,186,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.333,-0.519" Width="140"/>

            <Button Style="{StaticResource Signup}" x:Name="btbdangki" Height="30" Width="120" VerticalContentAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20" Content="ĐĂNG KÝ" FontSize="16" ForceCursor="True" FontWeight="Heavy" Click="btbdangki_Click">
            </Button>
            <Label Content="Đăng ký ngay:
                   " HorizontalAlignment="Center" FontFamily="Georgia" Margin="0,205,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.333,-0.519" Width="90" Height="24"/>
        </Grid>
        <Grid Grid.Column="1">
            <TextBlock Text="ĐĂNG NHẬP " FontSize="16" FontWeight="ExtraBold" Margin="63,19,63,0" VerticalAlignment="Top"/>


            <Button Style="{StaticResource Signup}" x:Name="btbdangnhap" Height="30" Width="160" VerticalContentAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20" Content="ĐĂNG NHẬP " FontSize="16" ForceCursor="True" FontWeight="Heavy" Click="btbdangnhap_Click"/>
            <TextBlock HorizontalAlignment="Left" Margin="21,63,0,0" TextWrapping="Wrap" Text="Tên tài khoản:" VerticalAlignment="Top" FontSize="14" FontWeight="Medium"/>
            <TextBox x:Name="txtbtendangnhap" HorizontalAlignment="Center" Margin="0,86,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="200" Height="24"/>
            <TextBlock HorizontalAlignment="Left" Margin="21,135,0,0" TextWrapping="Wrap" Text="Mật khẩu: " VerticalAlignment="Top" FontSize="14" FontWeight="Medium"/>
            <PasswordBox x:Name="pwdbox"  HorizontalAlignment="Center" Margin="0,154,0,0" VerticalAlignment="Top" Width="200" Height="24"/>
            <TextBox x:Name="txtpassword"  HorizontalAlignment="Center" Margin="0,154,0,0" VerticalAlignment="Top" Width="200" Height="24" TextChanged="txtpassword_TextChanged" ></TextBox>
            <CheckBox Content="Hiện mật khẩu" HorizontalAlignment="Left" Margin="110,182,0,0" VerticalAlignment="Top" FontWeight="Medium"   Checked="CheckBox_Checked" Unchecked="CheckBox_UnChecked"/>


        </Grid>
    </Grid>
</Window>