<UserControl x:Class="QUAN_LY.UI.Views.Tra_Cuu_Sach"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QUAN_LY.UI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="530" d:DesignWidth="700">
    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto" MinHeight="241"/>
        </Grid.RowDefinitions>

        <!-- Thanh tìm kiếm -->
        <Grid Margin="0,10,0,10">
            <TextBox x:Name="txtTimKiem" 
             Height="35" 
             FontSize="14"
             Padding="10,0,10,0"
             />

            <TextBlock Text="🔍 Nhập tên sách cần tìm..."
               FontStyle="Italic"
               Foreground="Gray"
               Margin="10,10,10,0"
               IsHitTestVisible="False"
              ></TextBlock>
        </Grid>

        <!-- Bảng danh sách sách -->
        <DataGrid x:Name="dgSach" Grid.Row="1"
                  CanUserAddRows="False"
                  HeadersVisibility="Column"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                 
                 Margin="0,0,0,241" Grid.RowSpan="2" SelectionChanged="dgSach_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Tên sách" Binding="{Binding TieuDe}" Width="*"/>
                <DataGridTextColumn Header="Tác giả" Binding="{Binding TacGia}" Width="*"/>
                <DataGridTextColumn Header="Thể loại" Binding="{Binding TheLoai}" Width="*"/>
                <DataGridTextColumn Header="NXB" Binding="{Binding NhaXuatBan}" Width="*"/>
                <DataGridTextColumn Header="Số lượng tồn" Binding="{Binding SoLuongTon}" Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Khu vực chi tiết sách -->
        <Border Grid.Row="2" Margin="0,49,0,0" Padding="15"
        BorderBrush="#0D9F56" BorderThickness="1" CornerRadius="8"
        Background="#F0FFF4">
            <StackPanel>
                <TextBlock Text="📖 Thông tin chi tiết sách" 
                   FontWeight="Bold" 
                   FontSize="18" 
                   Margin="0,0,0,10"/>

                <!-- Form thông tin sách -->
                <Grid Margin="10,0,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Tên sách:" Grid.Row="0" Grid.Column="0" FontWeight="Bold"/>
                    <TextBlock x:Name="txtTensach"  Grid.Row="0" Grid.Column="1"/>

                    <TextBlock Text="NXB:" Grid.Row="0" Grid.Column="2" FontWeight="Bold"/>
                    <TextBlock x:Name="txtNhaxb"  Grid.Row="0" Grid.Column="3"/>

                    <TextBlock Text="Thể loại:" Grid.Row="1" Grid.Column="0" FontWeight="Bold"/>
                    <TextBlock x:Name="txtTheloai"  Grid.Row="1" Grid.Column="1"/>

                    <TextBlock Text="Tác giả:" Grid.Row="1" Grid.Column="2" FontWeight="Bold"/>
                    <TextBlock x:Name="txtTacgia"  Grid.Row="1" Grid.Column="3"/>

                    <TextBlock Text="Số lượng tồn:" Grid.Row="2" Grid.Column="0" FontWeight="Bold"/>
                    <TextBlock x:Name="txtSoluongton"  Grid.Row="2" Grid.Column="1"/>

                    <TextBlock Text="Mô tả:" Grid.Row="2" Grid.Column="2" FontWeight="Bold"/>
                    <ScrollViewer Grid.Row="2" Grid.Column="3"
                                  VerticalScrollBarVisibility="Auto"
                                  MaxHeight="80">
                        <TextBlock x:Name="txtMota"
                                   TextWrapping="Wrap"
                                   TextTrimming="None"
                                   Margin="0,2,0,0"/>
                    </ScrollViewer>


                </Grid>

                <!-- Nút thêm giỏ -->
                <Button x:Name="btnThemGio" 
                Content="🛒 Thêm vào giỏ mượn"
                Width="150" Height="30" 
                Margin="150,10,0,0"
                HorizontalAlignment="Left"
                Background="#0D9F56" 
                Foreground="White" 
                FontWeight="Bold"
                Cursor="Hand" Click="btnThemGio_Click" 
               />
            </StackPanel>
        </Border>

    </Grid>
</UserControl>
