<Window x:Class="QUAN_LY.UI.Views.Dangnhap"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QUAN_LY.UI.Views"
        mc:Ignorable="d"
        Title="Dangnhap" Height="300" Width="400" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="PasswordBox" >
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border BorderThickness="1,1,1,1" 
                   
                   CornerRadius="10"
               BorderBrush="#FF087026"
              
               Background="White">
                            <ScrollViewer x:Name="PART_ContentHost"    
                             Margin="4,2,4,2"
                             HorizontalScrollBarVisibility="Hidden"
                             VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style TargetType="TextBox" >
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border BorderThickness="1,1,1,1" 
                        
                        CornerRadius="10"
                    BorderBrush="#FF087026"
                   
                    Background="White">
                            <ScrollViewer x:Name="PART_ContentHost"    
                                  Margin="4,2,4,2"
                                  HorizontalScrollBarVisibility="Hidden"
                                  VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="CheckBox"  >
            <Setter Property="Cursor" Value="Arrow"></Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Cursor" Value="Hand"></Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="Signup" TargetType="Button">
            <Setter Property="Background" Value="#FF0D9F56"></Setter>
            <Setter Property="Foreground" Value="White"></Setter>
            <Setter Property="Cursor" Value="Arrow"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"></ContentPresenter>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF007139"></Setter>
                    <Setter Property="Foreground" Value="#FFFF00"></Setter>
                    <Setter Property="Cursor" Value="Hand"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="#FFD3F8E6"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.4*"></ColumnDefinition>
            <ColumnDefinition Width="0.6*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" Background="#FF6AE4A7" >
            <Image Source="/Anh/Logo.png" VerticalAlignment="Top" HorizontalAlignment="Center" />
            <Button  Height="20" Width="120" Margin="0,140,0,0" Background="#FF6AE4A7" Content="Quên mật khẩu?" FontWeight="Medium" FontFamily="Georgia" BorderThickness="0,0,0,0"/>
            <Button Style="{StaticResource Signup}" x:Name="btbdangki" Height="30" Width="120" VerticalContentAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20" Content="ĐĂNG KÍ" FontSize="16" ForceCursor="True" FontWeight="Heavy" Click="btbdangki_Click">
            </Button>
        </Grid>
        <Grid Grid.Column="1">
            <TextBlock Text="Đăng Nhập " FontSize="16" FontWeight="ExtraBold" Margin="18,19,-8,0" VerticalAlignment="Top"/>


            <Button Style="{StaticResource Signup}" x:Name="btbdangnhap" Height="30" Width="160" VerticalContentAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20" Content="ĐĂNG NHẬP " FontSize="16" ForceCursor="True" FontWeight="Heavy" Click="btbdangnhap_Click"/>
            <TextBlock HorizontalAlignment="Left" Margin="21,63,0,0" TextWrapping="Wrap" Text="Tên tài khoản:" VerticalAlignment="Top" FontSize="14" FontWeight="Medium"/>
            <TextBox x:Name="txtbtendangnhap" HorizontalAlignment="Center" Margin="0,86,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="200" Height="24"/>
            <TextBlock HorizontalAlignment="Left" Margin="21,135,0,0" TextWrapping="Wrap" Text="Mật khẩu: " VerticalAlignment="Top" FontSize="14" FontWeight="Medium"/>
            <PasswordBox x:Name="pwdbox"  HorizontalAlignment="Center" Margin="0,154,0,0" VerticalAlignment="Top" Width="200" Height="24"/>
            <TextBox x:Name="txtpassword"  HorizontalAlignment="Center" Margin="0,154,0,0" VerticalAlignment="Top" Width="200" Height="24" ></TextBox>
            <CheckBox Content="Hiện mật khẩu" HorizontalAlignment="Left" Margin="110,182,0,0" VerticalAlignment="Top" FontWeight="Medium"   Checked="CheckBox_Checked" Unchecked="CheckBox_UnChecked"/>


        </Grid>
    </Grid>
</Window>