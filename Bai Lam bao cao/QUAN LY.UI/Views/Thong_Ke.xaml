<UserControl x:Class="QUAN_LY.UI.Views.Thong_Ke"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf" 
			 xmlns:local="clr-namespace:QUAN_LY.UI.Views" 
			 mc:Ignorable="d" d:DesignHeight="450" d:DesignWidth="800" Background="#E0F7FA" Loaded="UserControl_Loaded">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- Tiêu đề + lọc -->
        <Grid Margin="0 0 0 15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="📊 Thống kê thư viện" FontSize="22" FontWeight="Bold" VerticalAlignment="Center" Foreground="#0288D1"/>
            <ComboBox x:Name="cbMonth" Grid.Column="1" Width="140" HorizontalAlignment="Center" Margin="10 0" FontSize="14" Background="White" BorderBrush="#B0BEC5" BorderThickness="1" SelectionChanged="cbMonth_SelectionChanged">
                <ComboBoxItem Content="Tháng 1"/>
                <ComboBoxItem Content="Tháng 2"/>
                <ComboBoxItem Content="Tháng 3"/>
                <ComboBoxItem Content="Tháng 4"/>
                <ComboBoxItem Content="Tháng 5"/>
                <ComboBoxItem Content="Tháng 6"/>
                <ComboBoxItem Content="Tháng 7"/>
                <ComboBoxItem Content="Tháng 8"/>
                <ComboBoxItem Content="Tháng 9"/>
                <ComboBoxItem Content="Tháng 10"/>
                <ComboBoxItem Content="Tháng 11"/>
                <ComboBoxItem Content="Tháng 12"/>
            </ComboBox>
            <Button x:Name="btnFilter" Grid.Column="2" Content="Lọc" Width="80" Margin="10,0,0,0" FontSize="14" Background="#0288D1" Foreground="White" BorderThickness="0" Click="BtnFilter_Click" Height="29" VerticalAlignment="Bottom"/>
        </Grid>
        <!-- Biểu đồ -->
        <lvc:CartesianChart x:Name="chart" DisableAnimations="True" Padding="16,8,24,40" Grid.Row="1" LegendLocation="Top" Height="300" Width="500" Margin="0">
            <lvc:CartesianChart.Series>
                <lvc:ColumnSeries Title="Số lượt mượn" Values="{Binding Values}" Fill="#2E7D32"/>
            </lvc:CartesianChart.Series>
            <lvc:CartesianChart.AxisX>
                <lvc:Axis 
                      Labels="{Binding Labels}"
                      FontSize="13"
                      Foreground="#0288D1">
                    <lvc:Axis.Separator>
                        <lvc:Separator Step="1"/>
                    </lvc:Axis.Separator>
                </lvc:Axis>
            </lvc:CartesianChart.AxisX>
            <lvc:CartesianChart.AxisY>
                <lvc:Axis MinValue="0" MaxValue="250" FontSize="12" Foreground="#0288D1"/>
            </lvc:CartesianChart.AxisY>
        </lvc:CartesianChart>
    </Grid>
</UserControl>