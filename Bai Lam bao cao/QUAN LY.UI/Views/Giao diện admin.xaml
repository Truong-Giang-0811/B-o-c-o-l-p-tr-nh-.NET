<Window x:Class="QUAN_LY.UI.Views.Giao_diện_admin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QUAN_LY.UI.Views"
        mc:Ignorable="d"
        Title="Giao_diện_admin" Height="600" Width="900" WindowStartupLocation="CenterScreen" >
    <Window.Resources>
        <Style x:Key="Btbadmin" TargetType="Button">
            <Setter Property="Background" Value="#FF0D9F56"></Setter>
            <Setter Property="Foreground" Value="White"></Setter>
            <Setter Property="Cursor" Value="Arrow"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"></ContentPresenter>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF007139"></Setter>
                    <Setter Property="Foreground" Value="#FFFF00"></Setter>
                    <Setter Property="Cursor" Value="Hand"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.2*"></ColumnDefinition>
            <ColumnDefinition Width="0.8*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" Background="#FF6AE4A7">
            <Image Source="/Anh/Logo.png" VerticalAlignment="Top" HorizontalAlignment="Center"></Image>
            <Button  Style="{StaticResource Btbadmin}" Content="Quản lý sách" Margin="24,180,24,0" VerticalAlignment="Top" Height="33" Width="132" FontSize="15" FontWeight="Medium" />
            <Button  Style="{StaticResource Btbadmin}" Content="Quản lý nhân viên" HorizontalAlignment="Center" Margin="0,240,0,0" VerticalAlignment="Top" FontSize="15" FontWeight="Medium" Height="33" Width="132"/>
            <Button  Style="{StaticResource Btbadmin}" Content="Quản lý người dùng" HorizontalAlignment="Center" Margin="0,300,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Medium" Height="33" Width="132"/>
            <Button  Style="{StaticResource Btbadmin}" Content="Quản lý đơn mượn" HorizontalAlignment="Center" Margin="0,360,0,0" VerticalAlignment="Top" FontSize="15" FontWeight="Medium" Height="33" Width="132"/>
            <Button  Style="{StaticResource Btbadmin}" Content="Báo cáo thống kê" HorizontalAlignment="Center" Margin="0,420,0,0" VerticalAlignment="Top" FontSize="15" FontWeight="Medium" Height="33" Width="132"/>
            <Button x:Name="btn_dangxuat"  Style="{StaticResource Btbadmin}" Content="Đăng xuất" HorizontalAlignment="Center" Margin="0,480,0,0" VerticalAlignment="Top" Height="33" Width="132" FontSize="15" FontWeight="Medium" Click="btn_dangxuat_Click" />

        </Grid>
        <Grid Grid.Column="1" Background="#FFD3F8E6">

            
            <Label Content="Xin chào:Admin" HorizontalAlignment="Center" Margin="0,8,0,0" VerticalAlignment="Top" FontSize="24" FontWeight="Heavy" Foreground="Black"/>

        </Grid>
    </Grid>
</Window>
