<UserControl x:Class="QUAN_LY.UI.Views.Quan_Ly_Nhan_Vien"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QUAN_LY.UI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Background="White" Padding="12" CornerRadius="6">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- ==== THÔNG TIN NHÂN VIÊN ==== -->
            <GroupBox Header="Thông Tin Nhân Viên"
                      FontSize="15"
                      
                      BorderBrush="#1C82AD"
                      Margin="0,0,0,10">
                <Grid Margin="8,6">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="160"/>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="160"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- CỘT TRÁI -->
                    <TextBlock Text="Tên NV:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtTenNV" Grid.Row="0" Grid.Column="1" Margin="5"/>

                    <TextBlock Text="Tên đăng nhập:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtTenDangNhap" Grid.Row="1" Grid.Column="1" Margin="5"/>

                    <TextBlock Text="Mật khẩu:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"/>
                    <PasswordBox x:Name="pwbMatKhau" Grid.Row="2" Grid.Column="1" Margin="5"/>
                    <TextBox x:Name="txtMatKhau" Grid.Row="2" Grid.Column="1" Margin="5" Visibility="Collapsed"/>

                    <TextBlock Text="Nhập lại MK:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center"/>
                    <PasswordBox x:Name="pwbNhapLaiMK" Grid.Row="3" Grid.Column="1" Margin="5"/>
                    <TextBox x:Name="txtNhapLaiMK" Grid.Row="3" Grid.Column="1" Margin="5" Visibility="Collapsed"/>

                    <CheckBox x:Name="ckbHienMK"
                              Content="Hiện mật khẩu"
                              Grid.Row="4" Grid.Column="1"
                              Margin="20,0,0,0"
                              Width="125"
                              Height="25"
                              Checked="chkHienMK_Checked"
                              Unchecked="chkHienMK_Unchecked"/>

                    <!-- CỘT PHẢI -->
                    <TextBlock Text="Địa chỉ:" Grid.Row="0" Grid.Column="3" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtDiaChi" Grid.Row="0" Grid.Column="4" Margin="5"/>

                    <TextBlock Text="Ngày sinh:" Grid.Row="1" Grid.Column="3" VerticalAlignment="Center"/>
                    <DatePicker x:Name="dpNgaySinh" Grid.Row="1" Grid.Column="4" Margin="5"/>

                    <TextBlock Text="Giới tính:" Grid.Row="2" Grid.Column="3" VerticalAlignment="Center"/>
                    <StackPanel Grid.Row="2" Grid.Column="4" Orientation="Horizontal" Margin="5,0,0,0">
                        <RadioButton x:Name="rdNam" Content="Nam" Margin="0,0,15,0" Height="20"/>
                        <RadioButton x:Name="rdNu" Content="Nữ" Height="20"/>
                    </StackPanel>

                    <TextBlock Text="Điện thoại:" Grid.Row="3" Grid.Column="3" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtDienThoai" Grid.Row="3" Grid.Column="4" Margin="5"/>

                    <TextBlock Text="Email:" Grid.Row="4" Grid.Column="3" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtEmail" Grid.Row="4" Grid.Column="4" Margin="5"/>
                </Grid>
            </GroupBox>

            <!-- ==== NÚT CHỨC NĂNG & TÌM KIẾM ==== -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                <!-- Ô tìm kiếm -->
                <Grid Width="240" Height="32" Margin="5,0,15,0">
                    <TextBox x:Name="txtTimKiem"
                             VerticalContentAlignment="Center"
                             Padding="6,0,0,0"
                             BorderBrush="#1C82AD"
                             BorderThickness="1"
                             TextChanged="txtTimKiem_TextChanged" HorizontalAlignment="Right" Width="240"
                             />
                    <TextBlock x:Name="txtPlaceholder"
                               Text="🔍 Nhập tên nhân viên để tìm..."
                               Foreground="Gray"
                               VerticalAlignment="Center"
                               IsHitTestVisible="False"
                               Visibility="Visible"
                               HorizontalAlignment="Center"/>
                </Grid>
                
                <!-- Nút thao tác -->
                <Button x:Name="btnThemnv" Content="Thêm" Width="80" Height="30" Margin="5" Background="#1C82AD" Foreground="White" BorderBrush="#1C82AD" Cursor="Hand"/>
                <Button x:Name="btnXoaNV" Content="Xóa" Width="80" Height="30" Margin="5" Background="#FF3E3E" Foreground="White" BorderBrush="#1C82AD" Cursor="Hand"/>
                <Button x:Name="btnCapnhatNV" Content="Cập nhật" Width="80" Height="30" Margin="5" Background="#FFC107" Foreground="White" BorderBrush="#1C82AD" Cursor="Hand"/>
                <Button x:Name="btnReset" Content="Reset" Width="80" Height="30" Margin="5" Background="#1C82AD" Foreground="White" BorderBrush="#1C82AD" Cursor="Hand"/>

                <!-- Hover effect -->
                <StackPanel.Resources>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#1C82AD"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="BorderBrush" Value="#1C82AD"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#176E8F"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </StackPanel.Resources>
            </StackPanel>
            
            <!-- ==== DANH SÁCH NHÂN VIÊN ==== -->
            <DataGrid x:Name="dgNhanVien"
                      
                      Grid.Row="2"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                        CanUserAddRows="False"
                        FrozenColumnCount="1"
                        SelectionChanged="dgNhanVien_SelectionChanged"
                        HeadersVisibility="Column"
                        AlternatingRowBackground="#F9F9F9"
                        GridLinesVisibility="Horizontal"
                        BorderBrush="#1C82AD"
                        BorderThickness="1"
                        Background="White"
                        ScrollViewer.CanContentScroll="True"
                        ScrollViewer.VerticalScrollBarVisibility="Auto"
                        ScrollViewer.HorizontalScrollBarVisibility="Auto"
                        FontFamily="Segoe UI"
                        FontSize="14"
                        RowHeight="30"
                        HorizontalGridLinesBrush="#E0F2F1"
                        VerticalGridLinesBrush="#E0F2F1"
                      >
                <DataGrid.Resources>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#B2EBF2"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="Foreground" Value="#006064"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                        <Setter Property="Padding" Value="8,6"/>
                        <Setter Property="BorderBrush" Value="#80DEEA"/>
                        <Setter Property="BorderThickness" Value="0,0,1,1"/>
                    </Style>

                    <Style TargetType="DataGridCell">
                        <Setter Property="Padding" Value="6,4"/>
                        <Setter Property="BorderBrush" Value="#E0F2F1"/>
                        <Setter Property="BorderThickness" Value="0,0,1,1"/>
                    </Style>
                </DataGrid.Resources>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Mã NV" Binding="{Binding MaNhanVien}"/>
                    <DataGridTemplateColumn Header="Tên nhân viên">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding HoTen}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="Địa chỉ" Binding="{Binding DiaChi}"/>
                    <DataGridTextColumn Header="Giới tính" Binding="{Binding GioiTinh}"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Border>
</UserControl>
